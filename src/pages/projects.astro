---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import FooterV2 from '../components/v2/Footer.astro';
import SmoothScrolling from '../components/reactbits/SmoothScrolling';
import ScrollVelocity from '../components/reactbits/ScrollVelocity';
import AnimatedContent from '../components/reactbits/AnimatedContent';
import BlurText from '../components/reactbits/BlurText';
---

<Layout 
  title="Our Projects - Kandela Technology Portfolio | Web3, Website & App Development"
  description="Lihat portfolio proyek-proyek Kandela Technology termasuk Web3 Development, Website Development, Mobile Apps, dan Custom Software Solutions untuk berbagai klien di Indonesia."
  keywords="Kandela Technology Projects, Portfolio Web3, Blockchain Projects, Website Development Portfolio, App Development Portfolio, Software Projects Indonesia"
  ogImage="/kandela-transparent.png"
  canonical="/projects"
>
    <!-- <SmoothScrolling client:load> -->
        <Header />
        
        <!-- Hero Section -->
        <section class="relative w-full min-h-[60vh] flex items-center justify-center bg-gradient-to-br from-white via-gray-50 to-white overflow-hidden pt-24 pb-16">
            <!-- Decorative Background Elements -->
            <div class="absolute inset-0 pointer-events-none overflow-hidden">
                <!-- Gradient Orbs -->
                <div class="absolute top-20 right-10 w-96 h-96 bg-gradient-to-br from-[#00B4D8]/10 to-transparent rounded-full blur-3xl animate-float"></div>
                <div class="absolute bottom-40 left-10 w-80 h-80 bg-gradient-to-br from-[#0077B6]/10 to-transparent rounded-full blur-3xl animate-float-delay"></div>
                
                <!-- Floating Shapes -->
                <div class="absolute top-40 left-20 w-16 h-16 border-2 border-[#00B4D8]/20 rounded-lg rotate-12 animate-float"></div>
                <div class="absolute bottom-60 right-32 w-20 h-20 border-2 border-[#0077B6]/20 rounded-full animate-float-delay"></div>
            </div>

            <!-- Animated ScrollVelocity Background Text -->
            <div class="absolute top-1/3 left-0 right-0 opacity-5 pointer-events-none overflow-hidden">
                <ScrollVelocity 
                    texts={["OUR PORTFOLIO", "FEATURED WORK", "RECENT PROJECTS"]} 
                    velocity={2}
                    className="text-5xl lg:text-7xl font-black text-gray-900"
                    client:load 
                />
            </div>

            <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
                <div class="text-center max-w-4xl mx-auto">
                    <AnimatedContent
                        distance={50}
                        direction="vertical"
                        reverse={false}
                        duration={1.5}
                        ease="power2.out"
                        initialOpacity={0}
                        animateOpacity
                        delay={0}
                        client:load
                    >
                        <div class="inline-flex items-center gap-2 bg-white/60 backdrop-blur-md border border-[#00B4D8]/30 rounded-full px-6 py-2 mb-6 shadow-lg">
                            <span class="w-2 h-2 bg-[#00B4D8] rounded-full animate-pulse"></span>
                            <span class="text-[#0D3B66] text-sm font-semibold">Our Portfolio</span>
                        </div>
                    </AnimatedContent>

                    <div class="mb-6">
                        <BlurText
                            text="Showcasing Innovation & Excellence"
                            delay={50}
                            animateBy="words"
                            direction="top"
                            className="text-4xl sm:text-5xl lg:text-6xl font-black text-gray-900 [text-shadow:_0_2px_20px_rgb(0_180_216_/_20%)] text-center justify-center"
                            client:load
                        />
                    </div>

                    <AnimatedContent
                        distance={50}
                        direction="vertical"
                        reverse={false}
                        duration={1.5}
                        ease="power2.out"
                        initialOpacity={0}
                        animateOpacity
                        delay={0.2}
                        client:load
                    >
                        <p class="text-lg sm:text-xl text-gray-700 max-w-3xl mx-auto leading-relaxed">
                            Explore our complete collection of innovative projects that showcase our expertise in delivering cutting-edge technology solutions.
                        </p>
                    </AnimatedContent>
                </div>
            </div>
        </section>

        <!-- Projects Section -->
        <section class="relative bg-gradient-to-br from-white via-gray-50 to-white py-20 lg:py-32 overflow-hidden">
            <!-- Decorative Background Elements -->
            <div class="absolute inset-0 pointer-events-none overflow-hidden">
                <div class="absolute top-40 right-20 w-96 h-96 bg-gradient-to-br from-[#00B4D8]/10 to-transparent rounded-full blur-3xl animate-float"></div>
                <div class="absolute bottom-20 left-20 w-80 h-80 bg-gradient-to-br from-[#0077B6]/10 to-transparent rounded-full blur-3xl animate-float-delay"></div>
            </div>

            <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
                <!-- Projects Grid -->
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-10">
                    
                    <!-- Project 1: Digital Desa -->
                    <AnimatedContent
                        distance={50}
                        direction="vertical"
                        reverse={false}
                        duration={1.5}
                        ease="power3.out"
                        initialOpacity={0}
                        animateOpacity
                        delay={0.1}
                        client:load
                    >
                        <div class="group relative bg-white/70 backdrop-blur-xl rounded-3xl overflow-hidden shadow-lg hover:shadow-[0_15px_40px_rgba(0,119,182,0.2)] transition-all duration-500 hover:scale-[1.03] hover:-translate-y-2 h-full flex flex-col">
                            <!-- Animated Gradient Border -->
                            <div class="absolute inset-0 rounded-3xl bg-gradient-to-r from-[#0077B6] via-[#00B4D8] to-[#0077B6] opacity-0 group-hover:opacity-100 transition-opacity duration-500 animate-gradient-x" style="padding: 2px; -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0); -webkit-mask-composite: xor; mask-composite: exclude;"></div>
                            
                            <!-- Glowing Background -->
                            <div class="absolute inset-0 bg-gradient-to-br from-[#0077B6]/20 via-transparent to-[#00B4D8]/20 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                            
                            <!-- Image Header -->
                            <div class="relative h-64 overflow-hidden">
                                <div class="absolute inset-0 bg-gradient-to-br from-[#0077B6]/40 to-[#00B4D8]/40 mix-blend-overlay z-10 group-hover:from-[#0077B6]/60 group-hover:to-[#00B4D8]/60 transition-all duration-500"></div>
                                <img
                                    class="w-full h-full object-cover group-hover:scale-125 group-hover:rotate-2 transition-all duration-700"
                                    src="/p1.png"
                                    alt="Digital Desa"
                                />
                                
                                <!-- Number Badge -->
                                <div class="absolute top-4 right-4 z-20 w-16 h-16 bg-white/90 backdrop-blur-sm rounded-2xl flex items-center justify-center shadow-xl border-2 border-[#0077B6] group-hover:scale-125 group-hover:rotate-12 transition-all duration-500">
                                    <span class="text-3xl font-black bg-gradient-to-br from-[#0077B6] to-[#00B4D8] bg-clip-text text-transparent">01</span>
                                </div>
                            </div>

                            <!-- Content -->
                            <div class="p-6 lg:p-8 relative flex-1 flex flex-col">
                                <div class="mb-4">
                                    <span class="inline-flex items-center gap-1.5 px-4 py-2 bg-gradient-to-r from-[#0077B6]/10 to-[#00B4D8]/10 border border-[#0077B6]/30 rounded-full text-xs font-bold text-gray-800">
                                        Web Platform • Gov Tech
                                    </span>
                                </div>

                                <h3 class="text-2xl lg:text-3xl font-black text-gray-900 mb-3 group-hover:text-[#0077B6] transition-colors duration-300">
                                    Digital Desa
                                </h3>
                                <p class="text-sm lg:text-base text-gray-700 leading-relaxed flex-1">
                                    A comprehensive digital transformation platform empowering Indonesian villages with integrated administrative services, transparent information systems, and tools for economic growth.
                                </p>
                            </div>
                        </div>
                    </AnimatedContent>

                    <!-- Project 2: Teritorial -->
                    <AnimatedContent
                        distance={50}
                        direction="vertical"
                        reverse={false}
                        duration={1.5}
                        ease="power3.out"
                        initialOpacity={0}
                        animateOpacity
                        delay={0.2}
                        client:load
                    >
                        <div class="group relative bg-white/70 backdrop-blur-xl rounded-3xl overflow-hidden shadow-lg hover:shadow-[0_15px_40px_rgba(0,180,216,0.2)] transition-all duration-500 hover:scale-[1.03] hover:-translate-y-2 h-full flex flex-col">
                            <div class="absolute inset-0 rounded-3xl bg-gradient-to-r from-[#00B4D8] via-[#0077B6] to-[#00B4D8] opacity-0 group-hover:opacity-100 transition-opacity duration-500 animate-gradient-x" style="padding: 2px; -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0); -webkit-mask-composite: xor; mask-composite: exclude;"></div>
                            
                            <div class="relative h-64 overflow-hidden">
                                <div class="absolute inset-0 bg-gradient-to-br from-[#00B4D8]/40 to-[#0077B6]/40 mix-blend-overlay z-10 group-hover:from-[#00B4D8]/60 group-hover:to-[#0077B6]/60 transition-all duration-500"></div>
                                <img
                                    class="w-full h-full object-cover group-hover:scale-125 group-hover:-rotate-2 transition-all duration-700"
                                    src="/p2.png"
                                    alt="Teritorial"
                                />
                                
                                <div class="absolute top-4 left-4 z-20 w-16 h-16 bg-white/90 backdrop-blur-sm rounded-2xl flex items-center justify-center shadow-xl border-2 border-[#00B4D8] group-hover:scale-125 group-hover:-rotate-12 transition-all duration-500">
                                    <span class="text-3xl font-black bg-gradient-to-br from-[#00B4D8] to-[#0077B6] bg-clip-text text-transparent">02</span>
                                </div>
                            </div>

                            <div class="p-6 lg:p-8 relative flex-1 flex flex-col">
                                <div class="mb-4">
                                    <span class="inline-flex items-center gap-1.5 px-4 py-2 bg-gradient-to-r from-[#00B4D8]/10 to-[#0077B6]/10 border border-[#00B4D8]/30 rounded-full text-xs font-bold text-gray-800">
                                        News Portal • Media Tech
                                    </span>
                                </div>

                                <h3 class="text-2xl lg:text-3xl font-black text-gray-900 mb-3 group-hover:text-[#00B4D8] transition-colors duration-300">
                                    Teritorial
                                </h3>
                                <p class="text-sm lg:text-base text-gray-700 leading-relaxed flex-1">
                                    A modern digital news platform delivering real-time, sharp, and reliable information covering national issues, politics, law, and economic developments across Indonesia.
                                </p>
                            </div>
                        </div>
                    </AnimatedContent>

                    <!-- Project 3: Anglebull -->
                    <AnimatedContent
                        distance={50}
                        direction="vertical"
                        reverse={false}
                        duration={1.5}
                        ease="power3.out"
                        initialOpacity={0}
                        animateOpacity
                        delay={0.3}
                        client:load
                    >
                        <div class="group relative bg-white/70 backdrop-blur-xl rounded-3xl overflow-hidden shadow-lg hover:shadow-[0_15px_40px_rgba(13,59,102,0.2)] transition-all duration-500 hover:scale-[1.03] hover:-translate-y-2 h-full flex flex-col">
                            <div class="absolute inset-0 rounded-3xl bg-gradient-to-r from-[#0D3B66] via-[#0077B6] to-[#0D3B66] opacity-0 group-hover:opacity-100 transition-opacity duration-500 animate-gradient-x" style="padding: 2px; -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0); -webkit-mask-composite: xor; mask-composite: exclude;"></div>
                            
                            <div class="relative h-64 overflow-hidden">
                                <div class="absolute inset-0 bg-gradient-to-br from-[#0D3B66]/40 to-[#0077B6]/40 mix-blend-overlay z-10 group-hover:from-[#0D3B66]/60 group-hover:to-[#0077B6]/60 transition-all duration-500"></div>
                                <img
                                    class="w-full h-full object-cover group-hover:scale-125 group-hover:rotate-2 transition-all duration-700"
                                    src="/anglebull.png"
                                    alt="Anglebull"
                                />
                                
                                <div class="absolute top-4 right-4 z-20 w-16 h-16 bg-white/90 backdrop-blur-sm rounded-2xl flex items-center justify-center shadow-xl border-2 border-[#0D3B66] group-hover:scale-125 group-hover:rotate-12 transition-all duration-500">
                                    <span class="text-3xl font-black bg-gradient-to-br from-[#0D3B66] to-[#0077B6] bg-clip-text text-transparent">03</span>
                                </div>
                            </div>

                            <div class="p-6 lg:p-8 relative flex-1 flex flex-col">
                                <div class="mb-4">
                                    <span class="inline-flex items-center gap-1.5 px-4 py-2 bg-gradient-to-r from-[#0D3B66]/10 to-[#0077B6]/10 border border-[#0D3B66]/30 rounded-full text-xs font-bold text-gray-800">
                                        FinTech • Investment
                                    </span>
                                </div>

                                <h3 class="text-2xl lg:text-3xl font-black text-gray-900 mb-3 group-hover:text-[#0D3B66] transition-colors duration-300">
                                    Anglebull
                                </h3>
                                <p class="text-sm lg:text-base text-gray-700 leading-relaxed flex-1">
                                    A comprehensive investment platform providing real-time market analysis, portfolio management tools, and advanced trading features to help investors make informed financial decisions.
                                </p>
                            </div>
                        </div>
                    </AnimatedContent>

                    <!-- Project 4: Podomoro Park -->
                    <AnimatedContent
                        distance={50}
                        direction="vertical"
                        reverse={false}
                        duration={1.5}
                        ease="power3.out"
                        initialOpacity={0}
                        animateOpacity
                        delay={0.4}
                        client:load
                    >
                        <div class="group relative bg-white/70 backdrop-blur-xl rounded-3xl overflow-hidden shadow-lg hover:shadow-[0_15px_40px_rgba(0,180,216,0.2)] transition-all duration-500 hover:scale-[1.03] hover:-translate-y-2 h-full flex flex-col">
                            <div class="absolute inset-0 rounded-3xl bg-gradient-to-r from-[#00B4D8] via-[#0077B6] to-[#00B4D8] opacity-0 group-hover:opacity-100 transition-opacity duration-500 animate-gradient-x" style="padding: 2px; -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0); -webkit-mask-composite: xor; mask-composite: exclude;"></div>
                            
                            <div class="relative h-64 overflow-hidden">
                                <div class="absolute inset-0 bg-gradient-to-br from-[#00B4D8]/40 to-[#0077B6]/40 mix-blend-overlay z-10 group-hover:from-[#00B4D8]/60 group-hover:to-[#0077B6]/60 transition-all duration-500"></div>
                                <img
                                    class="w-full h-full object-cover group-hover:scale-125 group-hover:-rotate-2 transition-all duration-700"
                                    src="/Podomoro Park.png"
                                    alt="Podomoro Park"
                                />
                                
                                <div class="absolute top-4 left-4 z-20 w-16 h-16 bg-white/90 backdrop-blur-sm rounded-2xl flex items-center justify-center shadow-xl border-2 border-[#00B4D8] group-hover:scale-125 group-hover:-rotate-12 transition-all duration-500">
                                    <span class="text-3xl font-black bg-gradient-to-br from-[#00B4D8] to-[#0077B6] bg-clip-text text-transparent">04</span>
                                </div>
                            </div>

                            <div class="p-6 lg:p-8 relative flex-1 flex flex-col">
                                <div class="mb-4">
                                    <span class="inline-flex items-center gap-1.5 px-4 py-2 bg-gradient-to-r from-[#00B4D8]/10 to-[#0077B6]/10 border border-[#00B4D8]/30 rounded-full text-xs font-bold text-gray-800">
                                        Real Estate • Property
                                    </span>
                                </div>

                                <h3 class="text-2xl lg:text-3xl font-black text-gray-900 mb-3 group-hover:text-[#00B4D8] transition-colors duration-300">
                                    Podomoro Park
                                </h3>
                                <p class="text-sm lg:text-base text-gray-700 leading-relaxed flex-1">
                                    A premium residential and commercial development website showcasing luxury properties, amenities, and location advantages with elegant design and seamless user experience.
                                </p>
                            </div>
                        </div>
                    </AnimatedContent>

                    <!-- Project 5: Royal Gading SPA -->
                    <AnimatedContent
                        distance={50}
                        direction="vertical"
                        reverse={false}
                        duration={1.5}
                        ease="power3.out"
                        initialOpacity={0}
                        animateOpacity
                        delay={0.5}
                        client:load
                    >
                        <div class="group relative bg-white/70 backdrop-blur-xl rounded-3xl overflow-hidden shadow-lg hover:shadow-[0_15px_40px_rgba(0,119,182,0.2)] transition-all duration-500 hover:scale-[1.03] hover:-translate-y-2 h-full flex flex-col">
                            <div class="absolute inset-0 rounded-3xl bg-gradient-to-r from-[#0077B6] via-[#00B4D8] to-[#0077B6] opacity-0 group-hover:opacity-100 transition-opacity duration-500 animate-gradient-x" style="padding: 2px; -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0); -webkit-mask-composite: xor; mask-composite: exclude;"></div>
                            
                            <div class="relative h-64 overflow-hidden">
                                <div class="absolute inset-0 bg-gradient-to-br from-[#0077B6]/40 to-[#00B4D8]/40 mix-blend-overlay z-10 group-hover:from-[#0077B6]/60 group-hover:to-[#00B4D8]/60 transition-all duration-500"></div>
                                <img
                                    class="w-full h-full object-cover group-hover:scale-125 group-hover:rotate-2 transition-all duration-700"
                                    src="/Royal Gading.png"
                                    alt="Royal Gading SPA"
                                />
                                
                                <div class="absolute top-4 right-4 z-20 w-16 h-16 bg-white/90 backdrop-blur-sm rounded-2xl flex items-center justify-center shadow-xl border-2 border-[#0077B6] group-hover:scale-125 group-hover:rotate-12 transition-all duration-500">
                                    <span class="text-3xl font-black bg-gradient-to-br from-[#0077B6] to-[#00B4D8] bg-clip-text text-transparent">05</span>
                                </div>
                            </div>

                            <div class="p-6 lg:p-8 relative flex-1 flex flex-col">
                                <div class="mb-4">
                                    <span class="inline-flex items-center gap-1.5 px-4 py-2 bg-gradient-to-r from-[#0077B6]/10 to-[#00B4D8]/10 border border-[#0077B6]/30 rounded-full text-xs font-bold text-gray-800">
                                        Wellness • Hospitality
                                    </span>
                                </div>

                                <h3 class="text-2xl lg:text-3xl font-black text-gray-900 mb-3 group-hover:text-[#0077B6] transition-colors duration-300">
                                    Royal Gading SPA
                                </h3>
                                <p class="text-sm lg:text-base text-gray-700 leading-relaxed flex-1">
                                    An elegant wellness center website featuring spa services, treatment packages, online booking system, and a serene digital experience that reflects luxury and relaxation.
                                </p>
                            </div>
                        </div>
                    </AnimatedContent>

                    <!-- Project 6: Warung Pintar -->
                    <AnimatedContent
                        distance={50}
                        direction="vertical"
                        reverse={false}
                        duration={1.5}
                        ease="power3.out"
                        initialOpacity={0}
                        animateOpacity
                        delay={0.6}
                        client:load
                    >
                        <div class="group relative bg-white/70 backdrop-blur-xl rounded-3xl overflow-hidden shadow-lg hover:shadow-[0_15px_40px_rgba(13,59,102,0.2)] transition-all duration-500 hover:scale-[1.03] hover:-translate-y-2 h-full flex flex-col">
                            <div class="absolute inset-0 rounded-3xl bg-gradient-to-r from-[#0D3B66] via-[#0077B6] to-[#0D3B66] opacity-0 group-hover:opacity-100 transition-opacity duration-500 animate-gradient-x" style="padding: 2px; -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0); -webkit-mask-composite: xor; mask-composite: exclude;"></div>
                            
                            <div class="relative h-64 overflow-hidden">
                                <div class="absolute inset-0 bg-gradient-to-br from-[#0D3B66]/40 to-[#0077B6]/40 mix-blend-overlay z-10 group-hover:from-[#0D3B66]/60 group-hover:to-[#0077B6]/60 transition-all duration-500"></div>
                                <img
                                    class="w-full h-full object-cover group-hover:scale-125 group-hover:-rotate-2 transition-all duration-700"
                                    src="/Warung Pintar.png"
                                    alt="Warung Pintar"
                                />
                                
                                <div class="absolute top-4 left-4 z-20 w-16 h-16 bg-white/90 backdrop-blur-sm rounded-2xl flex items-center justify-center shadow-xl border-2 border-[#0D3B66] group-hover:scale-125 group-hover:-rotate-12 transition-all duration-500">
                                    <span class="text-3xl font-black bg-gradient-to-br from-[#0D3B66] to-[#0077B6] bg-clip-text text-transparent">06</span>
                                </div>
                            </div>

                            <div class="p-6 lg:p-8 relative flex-1 flex flex-col">
                                <div class="mb-4">
                                    <span class="inline-flex items-center gap-1.5 px-4 py-2 bg-gradient-to-r from-[#0D3B66]/10 to-[#0077B6]/10 border border-[#0D3B66]/30 rounded-full text-xs font-bold text-gray-800">
                                        Retail Tech • POS
                                    </span>
                                </div>

                                <h3 class="text-2xl lg:text-3xl font-black text-gray-900 mb-3 group-hover:text-[#0D3B66] transition-colors duration-300">
                                    Warung Pintar
                                </h3>
                                <p class="text-sm lg:text-base text-gray-700 leading-relaxed flex-1">
                                    A smart retail technology platform digitizing traditional Indonesian warungs with inventory management, point-of-sale systems, and data analytics to modernize local businesses.
                                </p>
                            </div>
                        </div>
                    </AnimatedContent>

                </div>

                <!-- Call to Action -->
                
            </div>

            <!-- Note Section -->
            <AnimatedContent
                distance={50}
                direction="vertical"
                reverse={false}
                duration={1.5}
                ease="power2.out"
                initialOpacity={0}
                animateOpacity
                delay={0.7}
                client:load
            >
                <div class="text-center mt-16 lg:mt-20">
                    <div class="inline-flex items-center gap-3 bg-white/60 backdrop-blur-md border border-gray-300 rounded-full px-6 py-3 shadow-lg">
                        <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <span class="text-sm font-semibold text-gray-700">
                            Projects shown are a selection of publicly shareable work
                        </span>
                    </div>
                </div>
            </AnimatedContent>
        </section>

        <FooterV2 />
    <!-- </SmoothScrolling> -->
</Layout>

<style>
    /* Floating Animations */
    @keyframes float {
        0%,
        100% {
            transform: translateY(0px) rotate(0deg);
        }
        50% {
            transform: translateY(-20px) rotate(5deg);
        }
    }

    @keyframes float-delay {
        0%,
        100% {
            transform: translateY(0px) rotate(0deg);
        }
        50% {
            transform: translateY(-30px) rotate(-5deg);
        }
    }

    @keyframes gradient-x {
        0%, 100% {
            background-position: 0% 50%;
        }
        50% {
            background-position: 100% 50%;
        }
    }

    .animate-float {
        animation: float 6s ease-in-out infinite;
    }

    .animate-float-delay {
        animation: float-delay 8s ease-in-out infinite;
    }

    .animate-gradient-x {
        background-size: 200% 200%;
        animation: gradient-x 3s ease infinite;
    }
</style>
