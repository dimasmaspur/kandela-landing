---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import FooterV2 from '../components/v2/Footer.astro';
import AnimatedContent from '../components/reactbits/AnimatedContent';
import BlurText from '../components/reactbits/BlurText';
import LiquidEither from '../components/reactbits/LiquidEither';
import EmailProtector from '../components/EmailProtector.astro';
---

<Layout 
  title="404 - Page Not Found | Kandela Technology"
  description="Oops! Halaman yang Anda cari tidak ditemukan. Mari kembali ke jalur yang benar bersama Kandela Technology."
  keywords="404, Page Not Found, Kandela Technology"
  ogImage="/kandela-transparent.png"
>
  <Header />
  
  <!-- 404 Hero Section -->
  <section class="relative w-full min-h-screen flex items-center justify-center bg-white overflow-hidden">
    <!-- Background Effect -->
    <div class="absolute inset-0 z-0">
      <LiquidEither colors={["#00B4D8", "#00B4D8", "#ffffff"]} client:load />
    </div>

    <!-- Floating Decorative Elements -->
    <div class="absolute inset-0 z-[1] pointer-events-none overflow-hidden">
      <!-- Gradient Orbs -->
      <div class="absolute top-1/4 right-1/4 w-96 h-96 bg-gradient-to-br from-[#00B4D8]/30 to-transparent rounded-full blur-3xl animate-pulse"></div>
      <div class="absolute bottom-1/4 left-1/4 w-80 h-80 bg-gradient-to-br from-[#0077B6]/20 to-transparent rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
      
      <!-- Floating Shapes -->
      <div class="absolute top-20 left-10 w-20 h-20 border-4 border-[#00B4D8]/30 rounded-lg rotate-12 animate-float"></div>
      <div class="absolute top-40 right-20 w-16 h-16 bg-gradient-to-br from-[#00B4D8]/20 to-[#0077B6]/20 rounded-full animate-float-delay"></div>
      <div class="absolute bottom-40 left-20 w-12 h-12 border-4 border-[#0077B6]/30 rounded-full animate-float" style="animation-delay: 2s;"></div>
      <div class="absolute bottom-20 right-40 w-24 h-24 border-4 border-[#00B4D8]/20 rotate-45 animate-float-delay"></div>
    </div>

    <!-- Content -->
    <div class="container mx-auto relative z-10 px-4 sm:px-6 lg:px-8 py-16 sm:py-20">
      <div class="max-w-4xl mx-auto text-center">
        
        <!-- Animated 404 Number -->
        <AnimatedContent
          distance={100}
          direction="vertical"
          reverse={false}
          duration={1.5}
          ease="power3.out"
          initialOpacity={0}
          animateOpacity
          delay={0}
          client:load
        >
          <div class="mb-8 relative">
            <!-- Glow effect -->
            <div class="absolute inset-0 bg-gradient-to-r from-[#00B4D8]/30 via-[#0077B6]/30 to-[#00B4D8]/30 blur-3xl"></div>
            
            <div class="relative text-[120px] sm:text-[180px] lg:text-[240px] font-black leading-none">
              <span class="bg-gradient-to-r from-[#00B4D8] via-[#0077B6] to-[#0D3B66] bg-clip-text text-transparent drop-shadow-[0_0_30px_rgba(0,180,216,0.3)]">
                404
              </span>
            </div>
          </div>
        </AnimatedContent>

        <!-- Badge -->
        <AnimatedContent
          distance={50}
          direction="vertical"
          reverse={false}
          duration={1.5}
          ease="power2.out"
          initialOpacity={0}
          animateOpacity
          delay={0.2}
          client:load
        >
          <div class="inline-flex items-center gap-2 bg-white/60 backdrop-blur-md border border-[#00B4D8]/30 rounded-full px-6 py-2 mb-6 shadow-lg">
            <svg class="w-5 h-5 text-[#00B4D8]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span class="text-[#0D3B66] text-sm font-semibold">Oops! Lost in Space</span>
          </div>
        </AnimatedContent>

        <!-- Main Heading -->
        <h1 class="mb-6">
          <BlurText
            text="Page Not Found"
            delay={50}
            animateBy="words"
            direction="top"
            className="text-3xl sm:text-4xl lg:text-5xl font-black text-gray-900 mb-4 justify-center"
            client:load
          />
        </h1>

        <!-- Description -->
        <AnimatedContent
          distance={50}
          direction="vertical"
          reverse={false}
          duration={1.5}
          ease="power2.out"
          initialOpacity={0}
          animateOpacity
          delay={0.4}
          client:load
        >
          <p class="text-lg sm:text-xl text-gray-700 leading-relaxed max-w-2xl mx-auto mb-8">
            Sepertinya halaman yang Anda cari telah berpindah, dihapus, atau mungkin tidak pernah ada. 
            Mari kita arahkan Anda kembali ke jalur yang benar!
          </p>
        </AnimatedContent>

        <!-- Suggested Actions -->
        <AnimatedContent
          distance={50}
          direction="vertical"
          reverse={false}
          duration={1.5}
          ease="power2.out"
          initialOpacity={0}
          animateOpacity
          delay={0.5}
          client:load
        >
          <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
            <!-- Go Home Button -->
            <a
              href="/"
              class="group relative bg-gradient-to-r from-[#00B4D8] to-[#0077B6] text-white rounded-full px-8 py-4 text-base font-bold shadow-[0_0_30px_rgba(0,180,216,0.4)] hover:shadow-[0_0_50px_rgba(0,180,216,0.6)] hover:scale-105 transition-all duration-300 inline-flex items-center justify-center gap-2 overflow-hidden"
            >
              <span class="absolute inset-0 bg-gradient-to-r from-[#0077B6] to-[#00B4D8] opacity-0 group-hover:opacity-100 transition-opacity duration-300"></span>
              <svg class="relative z-10 w-5 h-5 group-hover:-translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
              </svg>
              <span class="relative z-10">Back to Home</span>
            </a>

            <!-- Contact Us Button -->
            <EmailProtector
              email="hello@kandela.tech"
              className="group relative border-2 border-[#0077B6] text-[#0077B6] rounded-full px-8 py-4 text-base font-bold hover:text-white transition-all duration-300 inline-flex items-center justify-center gap-2 overflow-hidden"
            >
              <span class="absolute inset-0 bg-gradient-to-r from-[#00B4D8] to-[#0077B6] transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300 origin-left"></span>
              <svg class="relative z-10 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              <span class="relative z-10">Contact Us</span>
            </EmailProtector>
          </div>
        </AnimatedContent>

        <!-- Quick Links -->
        <AnimatedContent
          distance={50}
          direction="vertical"
          reverse={false}
          duration={1.5}
          ease="power2.out"
          initialOpacity={0}
          animateOpacity
          delay={0.6}
          client:load
        >
          <div class="max-w-xl mx-auto">
            <p class="text-sm font-semibold text-gray-600 mb-4">Popular Pages:</p>
            <div class="flex flex-wrap gap-3 justify-center">
              <a href="/projects" class="group px-4 py-2 bg-white/60 backdrop-blur-md border border-gray-200 rounded-full text-sm font-semibold text-gray-700 hover:border-[#00B4D8] hover:text-[#00B4D8] hover:shadow-lg transition-all duration-300">
                <span class="inline-flex items-center gap-1">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                  </svg>
                  Projects
                </span>
              </a>
              
              <a href="/career" class="group px-4 py-2 bg-white/60 backdrop-blur-md border border-gray-200 rounded-full text-sm font-semibold text-gray-700 hover:border-[#00B4D8] hover:text-[#00B4D8] hover:shadow-lg transition-all duration-300">
                <span class="inline-flex items-center gap-1">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                  Career
                </span>
              </a>
              
              <a href="/#service" class="group px-4 py-2 bg-white/60 backdrop-blur-md border border-gray-200 rounded-full text-sm font-semibold text-gray-700 hover:border-[#00B4D8] hover:text-[#00B4D8] hover:shadow-lg transition-all duration-300">
                <span class="inline-flex items-center gap-1">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                  </svg>
                  Services
                </span>
              </a>
              
              <a href="/#about" class="group px-4 py-2 bg-white/60 backdrop-blur-md border border-gray-200 rounded-full text-sm font-semibold text-gray-700 hover:border-[#00B4D8] hover:text-[#00B4D8] hover:shadow-lg transition-all duration-300">
                <span class="inline-flex items-center gap-1">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                  About Us
                </span>
              </a>
            </div>
          </div>
        </AnimatedContent>

        <!-- Fun Illustration or Additional Info -->
        <AnimatedContent
          distance={100}
          direction="vertical"
          reverse={false}
          duration={2}
          ease="power2.out"
          initialOpacity={0}
          animateOpacity
          delay={0.7}
          client:load
        >
          <div class="mt-16 max-w-md mx-auto">
            <div class="relative bg-white/40 backdrop-blur-lg border border-white/80 rounded-3xl p-8 shadow-xl">
              <div class="absolute inset-0 bg-gradient-to-br from-[#00B4D8]/5 to-[#0077B6]/5 rounded-3xl"></div>
              
              <div class="relative">
                <div class="w-16 h-16 bg-gradient-to-br from-[#00B4D8] to-[#0077B6] rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-lg">
                  <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                  </svg>
                </div>
                
                <h3 class="text-xl font-black text-gray-900 mb-3">Need Help?</h3>
                <p class="text-sm text-gray-700 leading-relaxed mb-4">
                  Jika Anda yakin halaman ini seharusnya ada, silakan hubungi kami dan kami akan segera membantu Anda.
                </p>
                
                <EmailProtector
                  email="hello@kandela.tech"
                  showEmail={true}
                  className="inline-flex items-center gap-2 text-[#00B4D8] font-semibold text-sm hover:gap-3 transition-all duration-300"
                >
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                  </svg>
                </EmailProtector>
              </div>
            </div>
          </div>
        </AnimatedContent>

      </div>
    </div>
  </section>

  <FooterV2 />
</Layout>

<style>
  /* Floating Animations */
  @keyframes float {
    0%,
    100% {
      transform: translateY(0px) rotate(0deg);
    }
    50% {
      transform: translateY(-20px) rotate(5deg);
    }
  }

  @keyframes float-delay {
    0%,
    100% {
      transform: translateY(0px) rotate(0deg);
    }
    50% {
      transform: translateY(-30px) rotate(-5deg);
    }
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  .animate-float-delay {
    animation: float-delay 8s ease-in-out infinite;
  }

  /* Additional smooth animations */
  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }
</style>

