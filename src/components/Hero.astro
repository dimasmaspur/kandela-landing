---
import BlurText from "./reactbits/BlurText";
import AnimatedContent from "./reactbits/AnimatedContent";
import GridDistortion from "./reactbits/GridDistortion";

const handleAnimationComplete = () => {
  console.log("Animation completed!");
};
---

<section
  class="relative w-full min-h-screen flex items-stretch overflow-hidden"
>
  <!-- Background Video dengan Overlay -->
  <div class="absolute inset-0 w-full h-full">
    <video
      autoplay
      muted
      loop
      playsinline
      class="absolute inset-0 w-full h-full object-cover"
    >
      <source src="/bg-6.mp4" type="video/mp4" />
      Your browser does not support the video tag.
    </video>
    <!-- Overlay gelap untuk masking video -->
    <div class="absolute inset-0 bg-black/30"></div>
  </div>
  <div class="container mx-auto flex flex-2 items-center relative z-10 px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col flex-1 justify-center py-16 sm:py-20 lg:py-0">
      <div class="mb-8 lg:mb-12">
        <BlurText
          text="Your Guiding Light in Innovation."
          delay={300}
          animateBy="words"
          direction="top"
          onAnimationComplete={handleAnimationComplete}
          className="text-4xl sm:text-5xl md:text-6xl lg:text-7xl xl:text-[8rem] font-bold text-white drop-shadow-[0_1.2px_1.2px_rgba(0,0,0,0.8)] text-center lg:text-left leading-tight"
          client:load
        />
      </div>
      <div class="flex flex-col-reverse lg:flex-row lg:justify-between lg:items-center gap-8 lg:gap-12">
        <div class="flex justify-start lg:justify-start">
          <AnimatedContent
            distance={300}
            direction="horizontal"
            reverse={false}
            duration={3}
            ease="power3.out"
            initialOpacity={0}
            animateOpacity
            scale={1.1}
            threshold={0.2}
            delay={0.3}
            client:load
          >
          <a
            href="/Company_Profile_Kandelatech.pdf"
            download
            class="bg-white text-black rounded-full px-8 sm:px-12 lg:px-20 py-2 sm:py-3 lg:py-2 text-base sm:text-lg font-bold shadow hover:bg-gray-100 transition-colors inline-block"
          >Grab Our Story</a>
        </AnimatedContent>
        </div>
        <div class="w-full lg:w-1/3">
          <BlurText
            text="Consistent and reliable innovative solutions, meticulously crafted to illuminate and fulfill your every complex digital need, paving the way for a brighter technological future."
            delay={100}
            animateBy="words"
            direction="top"
            onAnimationComplete={handleAnimationComplete}
            className="text-base sm:text-lg lg:text-xl text-white drop-shadow-[0_1.2px_1.2px_rgba(0,0,0,0.6)] text-center lg:text-left leading-relaxed"
            client:load
          />
        </div>
      </div>
    </div>
  </div>
</section>
