    </nav>

    <!-- Desktop Contact Button -->
    <div class="hidden md:block">
      <a href="/#footer" class="relative inline-flex items-center gap-2 overflow-hidden border-2 border-[#0077B6] text-[#0077B6] rounded-full px-5 lg:px-8 py-2 text-sm lg:text-base font-bold hover:text-white transition-all duration-300 group shadow-[0_0_20px_rgba(0,119,182,0.3)] hover:shadow-[0_0_30px_rgba(0,180,216,0.5)] hover:scale-105">
        <span class="absolute inset-0 bg-gradient-to-r from-[#00B4D8] to-[#0077B6] transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300 ease-out origin-left"></span>
        <svg class="relative z-10 w-4 h-4 lg:w-5 lg:h-5 group-hover:rotate-12 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
        </svg>
        <span class="relative z-10 hidden lg:inline">Contact Us</span>
        <span class="relative z-10 lg:hidden">Contact</span>
      </a>
    </div>

