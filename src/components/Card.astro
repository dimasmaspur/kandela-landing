---
import AnimatedContent from "./reactbits/AnimatedContent";
export interface Props {
  title: string;
  description: string;
  imgSrc: string;
  imgAlt?: string;
}
const { title, description, imgSrc, imgAlt = "" } = Astro.props;
---

<AnimatedContent
  distance={200}
  direction="vertical"
  reverse={false}
  duration={2}
  ease="power3.inOut"
  initialOpacity={0}
  animateOpacity
  scale={1.1}
  threshold={0.2}
  delay={0.2}
  client:load
>
  <div class="card-body bg-white/70 backdrop-blur-sm rounded-2xl sm:rounded-3xl lg:rounded-[32px] p-4 sm:p-6 lg:p-8 h-full flex flex-col">
    <h1 class="text-2xl sm:text-3xl lg:text-4xl xl:text-5xl font-bold mb-3 sm:mb-4">{title}</h1>
    <p class="text-sm sm:text-base lg:text-lg text-gray-600 flex-1 leading-relaxed mb-4 sm:mb-6">{description}</p>
    <img src={imgSrc} alt={imgAlt} class="w-full h-auto object-cover rounded-lg sm:rounded-xl" />
  </div>
</AnimatedContent>
