---
import AnimatedContent from "./reactbits/AnimatedContent";
export interface Props {
  title: string;
  description: string;
  imgSrc: string;
  imgAlt?: string;
}
const { title, description, imgSrc, imgAlt = "" } = Astro.props;
---

<AnimatedContent
  distance={200}
  direction="vertical"
  reverse={false}
  duration={2}
  ease="power3.inOut"
  initialOpacity={0}
  animateOpacity
  scale={1.1}
  threshold={0.2}
  delay={0.2}
  client:load
>
  <div class="card-body bg-white/20 backdrop-blur-md border border-white/30 shadow-xl rounded-2xl sm:rounded-3xl lg:rounded-[32px] p-4 sm:p-6 lg:p-8 h-full flex flex-col">
    <h1 class="text-2xl sm:text-3xl lg:text-4xl xl:text-5xl font-bold mb-3 sm:mb-4 text-gray-900">{title}</h1>
    <p class="text-sm sm:text-base lg:text-lg text-gray-700 flex-1 leading-relaxed mb-4 sm:mb-6">{description}</p>
    <div class="w-full h-80 sm:h-96 lg:h-[420px] overflow-hidden rounded-lg sm:rounded-xl bg-gray-100">
      <img src={imgSrc} alt={imgAlt} class="w-full h-full object-cover object-center" />
    </div>
  </div>
</AnimatedContent>
