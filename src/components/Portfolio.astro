---
import Card from "./Card.astro";
import Aurora from "./reactbits/Aurora";
import ScrollVelocity from "./reactbits/ScrollVelocity";
---

<section
    id="portofolio"
    class="w-full h-full relative"
    style="background: linear-gradient(to bottom, #ffffff 20%, #011340 100%);"
>
    <div
        class="flex flex-col items-start justify-start mt-8 w-full overflow-hidden"
    >
        <ScrollVelocity
            texts={["Our", "Portfolio"]}
            velocity={150}
            className="custom-scroll-text"
            client:load
        />
    </div>
    <div class="container mx-auto z-10 relative py-8 sm:py-12 lg:py-16 px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col bg-white/20 rounded-3xl sm:rounded-[48px] lg:rounded-[64px] min-h-[80vh] lg:min-h-[90vh]">
            <div
                class="flex flex-col lg:flex-row lg:justify-between lg:items-center w-full px-4 sm:px-6 lg:px-8 mt-6 sm:mt-8 lg:mt-10 gap-6 lg:gap-8"
            >
                <div class="w-full lg:w-1/2">
                    <h1 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-center lg:text-left mb-4">Portfolio</h1>
                    <p class="text-sm sm:text-base lg:text-lg text-gray-800 text-center lg:text-left leading-relaxed">
                        Discover our collection of innovative projects that
                        showcase our expertise in web development, mobile
                        applications, and digital solutions. Each portfolio
                        piece represents our commitment to delivering
                        exceptional results that drive business growth and user
                        engagement.
                    </p>
                </div>
                <div class="w-full lg:w-1/2 flex justify-center lg:justify-end">
                    <a
                        href="#footer"
                        class="bg-black text-white rounded-full px-8 sm:px-12 lg:px-20 py-2 sm:py-3 lg:py-2 text-base sm:text-lg font-bold shadow hover:bg-gray-800 transition-colors inline-block"
                        >Contact Us</a
                    >
                </div>
            </div>
            <div
                class="flex flex-col w-full pt-6 sm:pt-8 px-4 sm:px-6 lg:px-8 h-full pb-6 sm:pb-8"
            >
                <div class="w-full flex flex-col lg:flex-row gap-4 sm:gap-6 lg:gap-4 h-full rounded-2xl sm:rounded-[32px]">
                    <div class="w-full lg:w-1/2">
                        <Card
                            title="Digital Desa"
                            description="Digital Desa is a digital platform that helps villages in Indonesia to digitally transform, from administrative services, village information, to empowering the village economy online and in an integrated way."
                            imgSrc="/p1.png"
                            imgAlt="Digital Desa"
                        />
                    </div>
                    <div class="w-full lg:w-1/2">
                        <Card
                            title="Teritorial"
                            description="Teritorial is a news website that delivers up-to-date, sharp, and reliable information on national issues, politics, law, economy, and other important topics in Indonesia."
                            imgSrc="/p2.png"
                            imgAlt="Teritorial"
                        />
                    </div>
                </div>
            </div>
           
        </div>
    </div>
</section>
