---
import AnimatedContent from "../reactbits/AnimatedContent";
import ScrollVelocity from "../reactbits/ScrollVelocity";
---

<section
  id="portofolio"
  class="relative bg-gradient-to-br from-white via-gray-50 to-white py-20 lg:py-32 overflow-hidden"
>
  <!-- Decorative Background Elements -->
  <div class="absolute inset-0 pointer-events-none overflow-hidden">
    <!-- Gradient Orbs -->
    <div class="absolute top-20 right-10 w-96 h-96 bg-gradient-to-br from-[#00B4D8]/10 to-transparent rounded-full blur-3xl animate-float"></div>
    <div class="absolute bottom-40 left-10 w-80 h-80 bg-gradient-to-br from-[#0077B6]/10 to-transparent rounded-full blur-3xl animate-float-delay"></div>
    
    <!-- Floating Shapes -->
    <div class="absolute top-40 left-20 w-16 h-16 border-2 border-[#00B4D8]/20 rounded-lg rotate-12 animate-float"></div>
    <div class="absolute bottom-60 right-32 w-20 h-20 border-2 border-[#0077B6]/20 rounded-full animate-float-delay"></div>
    <div class="absolute top-1/2 right-10 w-12 h-12 border-2 border-[#00B4D8]/20 rotate-45 animate-float" style="animation-delay: 1s;"></div>
  </div>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    
    <!-- Animated ScrollVelocity Title -->
    <div class="mb-12 overflow-hidden">
      <ScrollVelocity 
        texts={["OUR PORTFOLIO", "FEATURED WORK", "RECENT PROJECTS"]} 
        velocity={2}
        className="text-5xl lg:text-7xl font-black text-transparent bg-clip-text bg-gradient-to-r from-[#00B4D8] via-[#0077B6] to-[#0D3B66] opacity-10"
        client:visible 
      />
    </div>

    <!-- Section Header -->
    <div class="text-center mb-16 lg:mb-20">
      <AnimatedContent
        distance={50}
        direction="vertical"
        reverse={false}
        duration={1.5}
        ease="power2.out"
        initialOpacity={0}
        animateOpacity
        delay={0}
        client:visible
      >
        <div class="inline-flex items-center gap-2 bg-white/60 backdrop-blur-md border border-[#00B4D8]/30 rounded-full px-6 py-2 mb-6 shadow-lg">
          <span class="w-2 h-2 bg-[#00B4D8] rounded-full animate-pulse"></span>
          <span class="text-[#0D3B66] text-sm font-semibold">Our Portfolio</span>
        </div>
      </AnimatedContent>

      <AnimatedContent
        distance={50}
        direction="vertical"
        reverse={false}
        duration={1.5}
        ease="power2.out"
        initialOpacity={0}
        animateOpacity
        delay={0.1}
        client:visible
      >
        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-black text-gray-900 mb-6 [text-shadow:_0_2px_20px_rgb(0_180_216_/_20%)]">
          Showcasing Innovation & Excellence
        </h2>
      </AnimatedContent>

      <AnimatedContent
        distance={50}
        direction="vertical"
        reverse={false}
        duration={1.5}
        ease="power2.out"
        initialOpacity={0}
        animateOpacity
        delay={0.2}
        client:visible
      >
        <p class="text-lg lg:text-xl text-gray-700 max-w-3xl mx-auto leading-relaxed mb-10">
          Explore our collection of innovative projects that showcase our expertise in delivering cutting-edge digital solutions.
        </p>
      </AnimatedContent>

      <AnimatedContent
        distance={50}
        direction="vertical"
        reverse={false}
        duration={1.5}
        ease="power2.out"
        initialOpacity={0}
        animateOpacity
        delay={0.3}
        client:visible
      >
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/projects"
            class="inline-flex items-center justify-center gap-2 px-8 py-3 rounded-full text-white font-bold bg-gradient-to-r from-[#0077B6] to-[#00B4D8] shadow-lg hover:shadow-[0_10px_30px_rgba(0,180,216,0.4)] transition-all duration-300 hover:scale-105"
          >
            View All Projects
            <svg class="w-5 h-5 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
          <a
            href="#footer"
            class="inline-flex items-center justify-center gap-2 px-8 py-3 rounded-full text-[#0077B6] font-bold border-2 border-[#0077B6] hover:bg-[#0077B6] hover:text-white shadow-lg hover:shadow-[0_10px_30px_rgba(0,119,182,0.4)] transition-all duration-300 hover:scale-105"
          >
            <svg class="w-5 h-5 transform group-hover:rotate-12 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            Contact Us
          </a>
        </div>
      </AnimatedContent>
    </div>

    <!-- Portfolio Grid - 2 Column Layout -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-10">
      
      <!-- Project Card 1: Digital Desa with PixelContent Effect -->
      <AnimatedContent
        distance={50}
        direction="vertical"
        reverse={false}
        duration={1.5}
        ease="power3.out"
        initialOpacity={0}
        animateOpacity
        delay={0.4}
        client:visible
      >
        <div class="group relative bg-white/70 backdrop-blur-xl rounded-3xl overflow-hidden shadow-lg hover:shadow-[0_15px_40px_rgba(0,119,182,0.2)] transition-all duration-500 hover:scale-[1.03] hover:-translate-y-2 h-full flex flex-col">
          <!-- Animated Gradient Border -->
          <div class="absolute inset-0 rounded-3xl bg-gradient-to-r from-[#0077B6] via-[#00B4D8] to-[#0077B6] opacity-0 group-hover:opacity-100 transition-opacity duration-500 animate-gradient-x" style="padding: 2px; -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0); -webkit-mask-composite: xor; mask-composite: exclude;"></div>
          
          <!-- Glowing Background -->
          <div class="absolute inset-0 bg-gradient-to-br from-[#0077B6]/20 via-transparent to-[#00B4D8]/20 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          
          <!-- Floating Shapes -->
          <div class="absolute top-10 right-10 w-20 h-20 bg-[#0077B6]/10 rounded-full blur-2xl group-hover:scale-150 transition-transform duration-700"></div>
          <div class="absolute bottom-10 left-10 w-16 h-16 bg-[#00B4D8]/10 rounded-full blur-2xl group-hover:scale-150 transition-transform duration-700"></div>
          
          <!-- Image Header -->
          <div class="relative h-64 overflow-hidden">
            <div class="absolute inset-0 bg-gradient-to-br from-[#0077B6]/40 to-[#00B4D8]/40 mix-blend-overlay z-10 group-hover:from-[#0077B6]/60 group-hover:to-[#00B4D8]/60 transition-all duration-500"></div>
            
            <img
              class="w-full h-full object-cover group-hover:scale-125 group-hover:rotate-2 transition-all duration-700"
              src="/p1.png"
              alt="Digital Desa"
            />
            
            <!-- Animated Rays -->
            <div class="absolute inset-0 opacity-0 group-hover:opacity-30 transition-opacity duration-500 z-[12]">
              <div class="absolute inset-0 bg-[linear-gradient(45deg,transparent_25%,rgba(0,119,182,0.5)_50%,transparent_75%)] bg-[length:250%_250%] animate-shimmer"></div>
            </div>
            
            <!-- Number Badge -->
            <div class="absolute top-4 right-4 z-20 w-16 h-16 bg-white/90 backdrop-blur-sm rounded-2xl flex items-center justify-center shadow-xl border-2 border-[#0077B6] group-hover:scale-125 group-hover:rotate-12 transition-all duration-500">
              <span class="text-3xl font-black bg-gradient-to-br from-[#0077B6] to-[#00B4D8] bg-clip-text text-transparent">01</span>
            </div>
            
            <!-- Icon Badge -->
            <div class="absolute top-4 left-4 z-20">
              <div class="absolute inset-0 bg-gradient-to-br from-[#0077B6] to-[#00B4D8] rounded-2xl blur-xl opacity-50 group-hover:opacity-100 animate-pulse"></div>
              <div class="relative w-16 h-16 bg-gradient-to-br from-[#0077B6] to-[#00B4D8] rounded-2xl flex items-center justify-center shadow-2xl group-hover:scale-125 group-hover:rotate-12 transition-all duration-500">
                <svg class="w-8 h-8 text-white group-hover:scale-110 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
                </svg>
              </div>
            </div>

            <!-- "VIEW PROJECT" Overlay on Hover -->
            <div class="absolute inset-0 z-[15] flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-500">
              <div class="bg-white/95 backdrop-blur-md rounded-2xl px-8 py-4 shadow-2xl transform scale-90 group-hover:scale-100 transition-transform duration-500">
                <span class="text-xl font-black bg-gradient-to-r from-[#0077B6] to-[#00B4D8] bg-clip-text text-transparent">VIEW PROJECT</span>
              </div>
            </div>
          </div>

          <!-- Content -->
          <div class="p-6 lg:p-8 relative flex-1 flex flex-col">
            <!-- Category Tag -->
            <div class="mb-4">
              <span class="inline-flex items-center gap-1.5 px-4 py-2 bg-gradient-to-r from-[#0077B6]/10 to-[#00B4D8]/10 border border-[#0077B6]/30 rounded-full text-xs font-bold text-gray-800 group-hover:border-[#0077B6] group-hover:bg-gradient-to-r group-hover:from-[#0077B6]/20 group-hover:to-[#00B4D8]/20 transition-all duration-300">
                <svg class="w-3.5 h-3.5 text-[#0077B6]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
                </svg>
                Web Platform • Gov Tech
              </span>
            </div>

            <h3 class="text-2xl lg:text-3xl font-black text-gray-900 mb-3 group-hover:text-[#0077B6] transition-colors duration-300">
              Digital Desa
            </h3>
            <p class="text-sm lg:text-base text-gray-700 leading-relaxed mb-6 flex-1">
              A comprehensive digital transformation platform empowering Indonesian villages with integrated administrative services, transparent information systems, and tools for economic growth.
            </p>
            
            <!-- Key Features -->
            <div class="space-y-3 mb-6">
              <div class="flex items-start gap-3 group/feature">
                <div class="w-5 h-5 mt-0.5 rounded-full bg-gradient-to-br from-[#0077B6] to-[#00B4D8] flex items-center justify-center flex-shrink-0 group-hover/feature:scale-110 transition-transform duration-300">
                  <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
                  </svg>
                </div>
                <span class="text-sm text-gray-700 font-medium group-hover/feature:text-[#0077B6] transition-colors duration-300">Digital administration & public services</span>
              </div>
              <div class="flex items-start gap-3 group/feature">
                <div class="w-5 h-5 mt-0.5 rounded-full bg-gradient-to-br from-[#0077B6] to-[#00B4D8] flex items-center justify-center flex-shrink-0 group-hover/feature:scale-110 transition-transform duration-300">
                  <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
                  </svg>
                </div>
                <span class="text-sm text-gray-700 font-medium group-hover/feature:text-[#0077B6] transition-colors duration-300">Mobile & web responsive platform</span>
              </div>
              <div class="flex items-start gap-3 group/feature">
                <div class="w-5 h-5 mt-0.5 rounded-full bg-gradient-to-br from-[#0077B6] to-[#00B4D8] flex items-center justify-center flex-shrink-0 group-hover/feature:scale-110 transition-transform duration-300">
                  <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
                  </svg>
                </div>
                <span class="text-sm text-gray-700 font-medium group-hover/feature:text-[#0077B6] transition-colors duration-300">Real-time data & analytics dashboard</span>
              </div>
            </div>

            <!-- CTA Link -->
            <!-- <a href="/projects/digital-desa" class="inline-flex items-center gap-2 text-[#0077B6] font-bold hover:gap-4 transition-all duration-300 group/link">
              <span class="group-hover/link:underline">View Full Case Study</span>
              <svg class="w-5 h-5 group-hover/link:translate-x-2 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </a> -->
          </div>
        </div>
      </AnimatedContent>

      <!-- Project Card 2: Teritorial with PixelContent Effect -->
      <AnimatedContent
        distance={50}
        direction="vertical"
        reverse={false}
        duration={1.5}
        ease="power3.out"
        initialOpacity={0}
        animateOpacity
        delay={0.5}
        client:visible
      >
        <div class="group relative bg-white/70 backdrop-blur-xl rounded-3xl overflow-hidden shadow-lg hover:shadow-[0_15px_40px_rgba(0,180,216,0.2)] transition-all duration-500 hover:scale-[1.03] hover:-translate-y-2 h-full flex flex-col">
          <!-- Animated Gradient Border -->
          <div class="absolute inset-0 rounded-3xl bg-gradient-to-r from-[#00B4D8] via-[#0077B6] to-[#00B4D8] opacity-0 group-hover:opacity-100 transition-opacity duration-500 animate-gradient-x" style="padding: 2px; -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0); -webkit-mask-composite: xor; mask-composite: exclude;"></div>
          
          <!-- Glowing Background -->
          <div class="absolute inset-0 bg-gradient-to-br from-[#00B4D8]/20 via-transparent to-[#0077B6]/20 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          
          <!-- Floating Shapes -->
          <div class="absolute top-10 right-10 w-20 h-20 bg-[#00B4D8]/10 rounded-full blur-2xl group-hover:scale-150 transition-transform duration-700"></div>
          <div class="absolute bottom-10 left-10 w-16 h-16 bg-[#0077B6]/10 rounded-full blur-2xl group-hover:scale-150 transition-transform duration-700"></div>
          
          <!-- Image Header -->
          <div class="relative h-64 overflow-hidden">
            <div class="absolute inset-0 bg-gradient-to-br from-[#00B4D8]/40 to-[#0077B6]/40 mix-blend-overlay z-10 group-hover:from-[#00B4D8]/60 group-hover:to-[#0077B6]/60 transition-all duration-500"></div>
            
            <img
              class="w-full h-full object-cover group-hover:scale-125 group-hover:-rotate-2 transition-all duration-700"
              src="/p2.png"
              alt="Teritorial"
            />
            
            <!-- Animated Rays -->
            <div class="absolute inset-0 opacity-0 group-hover:opacity-30 transition-opacity duration-500 z-[12]">
              <div class="absolute inset-0 bg-[linear-gradient(-45deg,transparent_25%,rgba(0,180,216,0.5)_50%,transparent_75%)] bg-[length:250%_250%] animate-shimmer"></div>
            </div>
            
            <!-- Number Badge -->
            <div class="absolute top-4 left-4 z-20 w-16 h-16 bg-white/90 backdrop-blur-sm rounded-2xl flex items-center justify-center shadow-xl border-2 border-[#00B4D8] group-hover:scale-125 group-hover:-rotate-12 transition-all duration-500">
              <span class="text-3xl font-black bg-gradient-to-br from-[#00B4D8] to-[#0077B6] bg-clip-text text-transparent">02</span>
            </div>
            
            <!-- Icon Badge -->
            <div class="absolute top-4 right-4 z-20">
              <div class="absolute inset-0 bg-gradient-to-br from-[#00B4D8] to-[#0077B6] rounded-2xl blur-xl opacity-50 group-hover:opacity-100 animate-pulse"></div>
              <div class="relative w-16 h-16 bg-gradient-to-br from-[#00B4D8] to-[#0077B6] rounded-2xl flex items-center justify-center shadow-2xl group-hover:scale-125 group-hover:-rotate-12 transition-all duration-500">
                <svg class="w-8 h-8 text-white group-hover:scale-110 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
                </svg>
              </div>
            </div>

            <!-- "VIEW PROJECT" Overlay on Hover -->
            <div class="absolute inset-0 z-[15] flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-500">
              <div class="bg-white/95 backdrop-blur-md rounded-2xl px-8 py-4 shadow-2xl transform scale-90 group-hover:scale-100 transition-transform duration-500">
                <span class="text-xl font-black bg-gradient-to-r from-[#00B4D8] to-[#0077B6] bg-clip-text text-transparent">VIEW PROJECT</span>
              </div>
            </div>
          </div>

          <!-- Content -->
          <div class="p-6 lg:p-8 relative flex-1 flex flex-col">
            <!-- Category Tag -->
            <div class="mb-4">
              <span class="inline-flex items-center gap-1.5 px-4 py-2 bg-gradient-to-r from-[#00B4D8]/10 to-[#0077B6]/10 border border-[#00B4D8]/30 rounded-full text-xs font-bold text-gray-800 group-hover:border-[#00B4D8] group-hover:bg-gradient-to-r group-hover:from-[#00B4D8]/20 group-hover:to-[#0077B6]/20 transition-all duration-300">
                <svg class="w-3.5 h-3.5 text-[#00B4D8]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
                </svg>
                News Portal • Media Tech
              </span>
            </div>

            <h3 class="text-2xl lg:text-3xl font-black text-gray-900 mb-3 group-hover:text-[#00B4D8] transition-colors duration-300">
              Teritorial
            </h3>
            <p class="text-sm lg:text-base text-gray-700 leading-relaxed mb-6 flex-1">
              A modern digital news platform delivering real-time, sharp, and reliable information covering national issues, politics, law, and economic developments across Indonesia.
            </p>
            
            <!-- Key Features -->
            <div class="space-y-3 mb-6">
              <div class="flex items-start gap-3 group/feature">
                <div class="w-5 h-5 mt-0.5 rounded-full bg-gradient-to-br from-[#00B4D8] to-[#0077B6] flex items-center justify-center flex-shrink-0 group-hover/feature:scale-110 transition-transform duration-300">
                  <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
                  </svg>
                </div>
                <span class="text-sm text-gray-700 font-medium group-hover/feature:text-[#00B4D8] transition-colors duration-300">Real-time news publishing system</span>
              </div>
              <div class="flex items-start gap-3 group/feature">
                <div class="w-5 h-5 mt-0.5 rounded-full bg-gradient-to-br from-[#00B4D8] to-[#0077B6] flex items-center justify-center flex-shrink-0 group-hover/feature:scale-110 transition-transform duration-300">
                  <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
                  </svg>
                </div>
                <span class="text-sm text-gray-700 font-medium group-hover/feature:text-[#00B4D8] transition-colors duration-300">Headless CMS & SEO optimized</span>
              </div>
              <div class="flex items-start gap-3 group/feature">
                <div class="w-5 h-5 mt-0.5 rounded-full bg-gradient-to-br from-[#00B4D8] to-[#0077B6] flex items-center justify-center flex-shrink-0 group-hover/feature:scale-110 transition-transform duration-300">
                  <svg class="w-3 h-3 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
                  </svg>
                </div>
                <span class="text-sm text-gray-700 font-medium group-hover/feature:text-[#00B4D8] transition-colors duration-300">Multi-category content management</span>
              </div>
            </div>

            <!-- CTA Link -->
            <!-- <a href="/projects/teritorial" class="inline-flex items-center gap-2 text-[#00B4D8] font-bold hover:gap-4 transition-all duration-300 group/link">
              <span class="group-hover/link:underline">View Full Case Study</span>
              <svg class="w-5 h-5 group-hover/link:translate-x-2 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </a> -->
          </div>
        </div>
      </AnimatedContent>

    </div>

    <!-- Bottom Stats/CTA Section with Enhanced Effects -->
    <AnimatedContent
      distance={50}
      direction="vertical"
      reverse={false}
      duration={1.5}
      ease="power2.out"
      initialOpacity={0}
      animateOpacity
      delay={0.7}
      client:visible
    >
      <div class="mt-16 lg:mt-20">
        <div class="relative bg-white/70 backdrop-blur-xl rounded-3xl p-8 lg:p-12 shadow-lg border border-white/60 overflow-hidden group/stats">
          <!-- Decorative Elements -->
          <div class="absolute top-0 right-0 w-40 h-40 bg-gradient-to-br from-[#00B4D8]/10 to-transparent rounded-full blur-3xl group-hover/stats:scale-150 transition-transform duration-700"></div>
          <div class="absolute bottom-0 left-0 w-32 h-32 bg-gradient-to-br from-[#0077B6]/10 to-transparent rounded-full blur-3xl group-hover/stats:scale-150 transition-transform duration-700"></div>
          
          <!-- Animated Border on Hover -->
          <div class="absolute inset-0 rounded-3xl bg-gradient-to-r from-[#00B4D8] via-[#0077B6] to-[#00B4D8] opacity-0 group-hover/stats:opacity-100 transition-opacity duration-500 animate-gradient-x" style="padding: 2px; -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0); -webkit-mask-composite: xor; mask-composite: exclude;"></div>
          
          <div class="relative grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
