---
import AnimatedContent from "../reactbits/AnimatedContent";
import BlurText from "../reactbits/BlurText";
import ScrollVelocity from "../reactbits/ScrollVelocity";

// Get current year
const currentYear = new Date().getFullYear();
---

<footer id="footer" class="relative bg-gradient-to-br from-white via-gray-50 to-white py-20 lg:py-32 overflow-hidden">
  <!-- Decorative Background Elements -->
  <div class="absolute inset-0 pointer-events-none overflow-hidden">
    <!-- Gradient Orbs -->
    <div class="absolute top-20 right-10 w-96 h-96 bg-gradient-to-br from-[#00B4D8]/10 to-transparent rounded-full blur-3xl animate-float"></div>
    <div class="absolute bottom-40 left-10 w-80 h-80 bg-gradient-to-br from-[#0077B6]/10 to-transparent rounded-full blur-3xl animate-float-delay"></div>
    
    <!-- Floating Shapes -->
    <div class="absolute top-40 left-20 w-16 h-16 border-2 border-[#00B4D8]/20 rounded-lg rotate-12 animate-float"></div>
    <div class="absolute bottom-60 right-32 w-20 h-20 border-2 border-[#0077B6]/20 rounded-full animate-float-delay"></div>
    <div class="absolute top-1/2 right-10 w-12 h-12 border-2 border-[#00B4D8]/20 rotate-45 animate-float" style="animation-delay: 1s;"></div>
  </div>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    
    <!-- Animated ScrollVelocity Background Text -->
    <div class="absolute top-0 left-0 right-0 opacity-5 pointer-events-none overflow-hidden">
      <ScrollVelocity 
        texts={["LET'S WORK TOGETHER", "GET IN TOUCH", "START YOUR PROJECT"]} 
        velocity={1}
        className="text-6xl lg:text-8xl font-black text-gray-900"
        client:load 
      />
    </div>

    <!-- Get In Touch Section - Featured at Top -->
    <AnimatedContent
      distance={50}
      direction="vertical"
      reverse={false}
      duration={1.5}
      ease="power2.out"
      initialOpacity={0}
      animateOpacity
      delay={0}
      client:load
    >
      <div class="max-w-4xl mx-auto mb-16 lg:mb-24">
        <!-- Header with BlurText -->
        <div class="text-center mb-10">
          <div class="inline-flex items-center gap-2 bg-white/60 backdrop-blur-md border border-[#00B4D8]/30 rounded-full px-6 py-2 mb-6 shadow-lg">
            <span class="w-2 h-2 bg-[#00B4D8] rounded-full animate-pulse"></span>
            <span class="text-[#0D3B66] text-sm font-semibold">Let's Work Together</span>
          </div>
          
          <div class="flex justify-center">
            <BlurText
              text="Ready to Start Your Project?"
              delay={50}
              animateBy="words"
              direction="top"
              className="text-3xl sm:text-4xl lg:text-5xl font-black text-gray-900 mb-4 [text-shadow:_0_2px_20px_rgb(0_180_216_/_20%)] text-center justify-center"
              client:load
            />
          </div>
          
          <div class="flex justify-center">
            <BlurText
              text="Let's discuss how we can help transform your ideas into reality"
              delay={30}
              animateBy="words"
              direction="top"
              className="text-lg text-gray-700 max-w-2xl mx-auto text-center justify-center"
              client:load
            />
          </div>
        </div>

        <!-- Contact Form Card -->
        <div class="relative bg-white/70 backdrop-blur-xl rounded-3xl p-6 lg:p-10 border border-gray-200 shadow-2xl group hover:shadow-[0_20px_60px_rgba(0,180,216,0.15)] transition-all duration-500">
          <!-- Decorative Elements -->
          <div class="absolute top-0 right-0 w-40 h-40 bg-gradient-to-br from-[#00B4D8]/10 to-transparent rounded-full blur-3xl group-hover:scale-150 transition-transform duration-700"></div>
          <div class="absolute bottom-0 left-0 w-32 h-32 bg-gradient-to-br from-[#0077B6]/10 to-transparent rounded-full blur-3xl group-hover:scale-150 transition-transform duration-700"></div>
          
          <!-- Animated Border on Hover -->
          <div class="absolute inset-0 rounded-3xl bg-gradient-to-r from-[#00B4D8] via-[#0077B6] to-[#00B4D8] opacity-0 group-hover:opacity-100 transition-opacity duration-500 animate-gradient-x" style="padding: 2px; -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0); -webkit-mask-composite: xor; mask-composite: exclude;"></div>
          
          <div class="relative">
            <!-- Contact Form -->
            <form class="space-y-5">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                <div>
                  <label for="name" class="block text-sm font-bold text-gray-900 mb-2">
                    Full Name *
                  </label>
                  <input
                    type="text"
                    id="name"
                    name="name"
                    class="w-full px-4 py-3.5 bg-white border-2 border-gray-200 rounded-xl text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-[#00B4D8] focus:border-transparent transition-all hover:border-[#00B4D8] font-medium"
                    placeholder="John Doe"
                    required
                  />
                </div>
                <div>
                  <label for="email" class="block text-sm font-bold text-gray-900 mb-2">
                    Email Address *
                  </label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    class="w-full px-4 py-3.5 bg-white border-2 border-gray-200 rounded-xl text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-[#00B4D8] focus:border-transparent transition-all hover:border-[#00B4D8] font-medium"
                    placeholder="john@example.com"
                    required
                  />
                </div>
              </div>

              <div>
                <label for="subject" class="block text-sm font-bold text-gray-900 mb-2">
                  Subject *
                </label>
                <input
                  type="text"
                  id="subject"
                  name="subject"
                  class="w-full px-4 py-3.5 bg-white border-2 border-gray-200 rounded-xl text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-[#00B4D8] focus:border-transparent transition-all hover:border-[#00B4D8] font-medium"
                  placeholder="Web Development Project"
                  required
                />
              </div>

              <div>
                <label for="message" class="block text-sm font-bold text-gray-900 mb-2">
                  Message *
                </label>
                <textarea
                  id="message"
                  name="message"
                  rows="5"
                  class="w-full px-4 py-3.5 bg-white border-2 border-gray-200 rounded-xl text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-[#00B4D8] focus:border-transparent transition-all resize-none hover:border-[#00B4D8] font-medium"
                  placeholder="Tell us about your project, goals, and timeline..."
                  required
                ></textarea>
              </div>

              <button
                type="submit"
                id="secure-send-btn"
                class="group/btn relative w-full bg-gradient-to-r from-[#00B4D8] to-[#0077B6] text-white font-bold py-4 px-8 rounded-xl shadow-[0_10px_40px_rgba(0,180,216,0.3)] hover:shadow-[0_15px_50px_rgba(0,180,216,0.5)] hover:scale-[1.02] transition-all duration-300 overflow-hidden"
              >
                <span class="absolute inset-0 bg-gradient-to-r from-[#0077B6] to-[#00B4D8] opacity-0 group-hover/btn:opacity-100 transition-opacity duration-300"></span>
                <span class="relative z-10 flex items-center justify-center gap-3 text-lg">
                  <svg class="w-6 h-6 group-hover/btn:rotate-12 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                  Send Message
                  <svg class="w-5 h-5 group-hover/btn:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                  </svg>
                </span>
              </button>
            </form>

            <script type="text/javascript">
              document.addEventListener('DOMContentLoaded', function () {
                const btn = document.getElementById('secure-send-btn');
                btn.addEventListener('click', function (event) {
                  event.preventDefault();
                  const name = document.getElementsByName('name')[0].value.trim();
                  const email = document.getElementsByName('email')[0].value.trim();
                  const subject = document.getElementById('subject').value.trim();
                  const message = document.getElementById('message').value.trim();

                  if (!name || !email || !subject || !message) {
                    alert('Semua field harus diisi.');
                    return;
                  }
                  const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                  if (!emailPattern.test(email)) {
                    alert('Format email tidak valid.');
                    return;
                  }

                  const mailto = 'mailto:hello@kandela.tech'
                    + '?subject=' + encodeURIComponent(subject)
                    + '&body=Nama: ' + encodeURIComponent(name)
                    + '%0AEmail: ' + encodeURIComponent(email)
                    + '%0APesan: ' + encodeURIComponent(message);

                  window.location.href = mailto;
                });
              });
            </script>
          </div>
        </div>
      </div>
    </AnimatedContent>

    <!-- Footer Info Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 md:gap-10 lg:gap-12 mb-10 lg:mb-16">
      
      <!-- Company Info -->
      <AnimatedContent
        distance={50}
        direction="vertical"
        reverse={false}
        duration={1.5}
        ease="power2.out"
        initialOpacity={0}
        animateOpacity
        delay={0.1}
        client:load
      >
        <div class="space-y-3 text-center md:text-left">
          <div class="flex justify-center md:justify-start">
            <img src="/logo-k-shine.webp" alt="Kandela Technology" class="h-12 lg:h-16 w-auto mb-3" />
          </div>
          <p class="text-sm text-gray-700 leading-relaxed max-w-md mx-auto md:mx-0">
            Illuminating your digital aspirations with cutting-edge solutions designed for the modern world.
          </p>
        </div>
      </AnimatedContent>

      <!-- Quick Links -->
      <AnimatedContent
        distance={50}
        direction="vertical"
        reverse={false}
        duration={1.5}
        ease="power2.out"
        initialOpacity={0}
        animateOpacity
        delay={0.2}
        client:load
      >
        <div class="hidden md:block">
          <h4 class="text-base lg:text-lg font-black text-gray-900 mb-3 lg:mb-5">Quick Links</h4>
          <ul class="space-y-2 lg:space-y-3">
            <li>
              <a href="/#service" class="group inline-flex items-center gap-2 text-sm font-semibold text-gray-700 hover:text-[#0077B6] transition-colors duration-300">
                <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
                Services
              </a>
            </li>
            <li>
              <a href="/#portofolio" class="group inline-flex items-center gap-2 text-sm font-semibold text-gray-700 hover:text-[#0077B6] transition-colors duration-300">
                <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
                Portfolio
              </a>
            </li>
            <li>
              <a href="/#about" class="group inline-flex items-center gap-2 text-sm font-semibold text-gray-700 hover:text-[#0077B6] transition-colors duration-300">
                <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
                About Us
              </a>
            </li>
            <li>
              <a href="/Company_Profile_Kandelatech.pdf" download class="group inline-flex items-center gap-2 text-sm font-semibold text-gray-700 hover:text-[#0077B6] transition-colors duration-300">
                <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
                Company Profile
              </a>
            </li>
          </ul>
        </div>
      </AnimatedContent>

      <!-- Services -->
      <AnimatedContent
        distance={50}
        direction="vertical"
        reverse={false}
        duration={1.5}
        ease="power2.out"
        initialOpacity={0}
        animateOpacity
        delay={0.3}
        client:load
      >
        <div class="hidden md:block">
          <h4 class="text-base lg:text-lg font-black text-gray-900 mb-3 lg:mb-5">Our Services</h4>
          <ul class="space-y-2 lg:space-y-3">
            <li class="flex items-start gap-2">
              <div class="w-1.5 h-1.5 bg-[#00B4D8] rounded-full mt-2 flex-shrink-0"></div>
              <span class="text-sm text-gray-700 font-medium">Web3 Development</span>
            </li>
            <li class="flex items-start gap-2">
              <div class="w-1.5 h-1.5 bg-[#00B4D8] rounded-full mt-2 flex-shrink-0"></div>
              <span class="text-sm text-gray-700 font-medium">Website & App Development</span>
            </li>
            <li class="flex items-start gap-2">
              <div class="w-1.5 h-1.5 bg-[#00B4D8] rounded-full mt-2 flex-shrink-0"></div>
              <span class="text-sm text-gray-700 font-medium">Custom Software</span>
            </li>
            <li class="flex items-start gap-2">
              <div class="w-1.5 h-1.5 bg-[#00B4D8] rounded-full mt-2 flex-shrink-0"></div>
              <span class="text-sm text-gray-700 font-medium">IT Staffing Solutions</span>
            </li>
          </ul>
        </div>
      </AnimatedContent>

      <!-- Contact Info -->
      <AnimatedContent
        distance={50}
        direction="vertical"
        reverse={false}
        duration={1.5}
        ease="power2.out"
        initialOpacity={0}
        animateOpacity
        delay={0.4}
        client:load
      >
        <div class="text-center md:text-left">
          <h4 class="text-base lg:text-lg font-black text-gray-900 mb-3 lg:mb-5">Get In Touch</h4>
          <ul class="space-y-3 lg:space-y-4 inline-block md:block">
            <li>
              <a href="mailto:hello@kandela.tech" class="group flex items-start gap-3 text-sm text-gray-700 hover:text-[#0077B6] transition-colors duration-300">
                <div class="w-9 h-9 lg:w-10 lg:h-10 bg-gradient-to-br from-[#00B4D8] to-[#0077B6] rounded-lg flex items-center justify-center flex-shrink-0 group-hover:scale-110 group-hover:rotate-6 transition-all duration-300 shadow-md">
                  <svg class="w-4 h-4 lg:w-5 lg:h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div class="text-left">
                  <div class="font-bold text-gray-900 mb-0.5 text-sm">Email</div>
                  <div class="font-semibold text-xs lg:text-sm break-words">hello@kandela.tech</div>
                </div>
              </a>
            </li>
            <li>
              <div class="flex items-start gap-3 text-sm text-gray-700">
                <div class="w-9 h-9 lg:w-10 lg:h-10 bg-gradient-to-br from-[#0077B6] to-[#0D3B66] rounded-lg flex items-center justify-center flex-shrink-0 shadow-md">
                  <svg class="w-4 h-4 lg:w-5 lg:h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <div class="text-left">
                  <div class="font-bold text-gray-900 mb-0.5 text-sm">Location</div>
                  <div class="font-semibold text-xs lg:text-sm">Jakarta, Indonesia</div>
                </div>
              </div>
            </li>
          </ul>
        </div>
      </AnimatedContent>

    </div>

    <!-- Bottom Bar -->
    <AnimatedContent
      distance={50}
      direction="vertical"
      reverse={false}
      duration={1.5}
      ease="power2.out"
      initialOpacity={0}
      animateOpacity
      delay={0.5}
      client:load
    >
      <div class="relative border-t-2 border-gray-200 pt-8">
        <div class="flex flex-col md:flex-row justify-between items-center gap-4">
          
          <!-- Copyright -->
          <div class="text-center md:text-left">
            <p class="text-sm text-gray-700 font-medium">
              &copy; {currentYear} <span class="font-black text-gray-900">Kandela Technology</span>. All rights reserved.
            </p>
          </div>

          <!-- Social Media -->
          <div class="flex items-center gap-4">
            <span class="text-sm font-bold text-gray-700">Follow Us:</span>
            <div class="flex gap-3">
              <a
                href="https://instagram.com/kandela.tech"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Instagram"
                class="group w-10 h-10 bg-white border-2 border-gray-300 rounded-xl flex items-center justify-center hover:bg-gradient-to-br hover:from-[#00B4D8] hover:to-[#0077B6] hover:border-transparent transition-all duration-300 hover:scale-110 hover:rotate-6 shadow-md hover:shadow-lg"
              >
                <svg class="w-5 h-5 text-gray-700 group-hover:text-white transition-colors duration-300" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
              </a>
              <a
                href="https://linkedin.com/company/kandelatech"
                target="_blank"
                rel="noopener noreferrer"
                aria-label="LinkedIn"
                class="group w-10 h-10 bg-white border-2 border-gray-300 rounded-xl flex items-center justify-center hover:bg-gradient-to-br hover:from-[#00B4D8] hover:to-[#0077B6] hover:border-transparent transition-all duration-300 hover:scale-110 hover:rotate-6 shadow-md hover:shadow-lg"
              >
                <svg class="w-5 h-5 text-gray-700 group-hover:text-white transition-colors duration-300" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </a>
            </div>
          </div>

        </div>
      </div>
    </AnimatedContent>

  </div>
</footer>

<style>
  /* Floating Animations */
  @keyframes float {
    0%,
    100% {
      transform: translateY(0px) rotate(0deg);
    }
    50% {
      transform: translateY(-20px) rotate(5deg);
    }
  }

  @keyframes float-delay {
    0%,
    100% {
      transform: translateY(0px) rotate(0deg);
    }
    50% {
      transform: translateY(-30px) rotate(-5deg);
    }
  }

  @keyframes gradient-x {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  .animate-float-delay {
    animation: float-delay 8s ease-in-out infinite;
  }

  .animate-gradient-x {
    background-size: 200% 200%;
    animation: gradient-x 3s ease infinite;
  }
</style>
