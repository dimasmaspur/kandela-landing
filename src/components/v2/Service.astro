      </AnimatedContent>

      <AnimatedContent
        distance={50}
        direction="vertical"
        reverse={false}
        duration={1.5}
        ease="power2.out"
        initialOpacity={0}
        animateOpacity
        delay={0.2}
        client:visible
      >
        <p class="text-lg lg:text-xl text-gray-700 max-w-3xl mx-auto leading-relaxed">
          At Kandela Technology, we illuminate your digital aspirations with
          cutting-edge solutions designed for the modern world.
        </p>
      </AnimatedContent>
    </div>

    <!-- Compact Services Grid - 2 Columns -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      
      <!-- Service Card 1: Web3 Development -->
      <AnimatedContent
        distance={50}
        direction="vertical"
        reverse={false}
        duration={1.5}
        ease="power3.out"
        initialOpacity={0}
        animateOpacity
        delay={0.3}
        client:visible
      >
        <div class="group relative bg-white/70 backdrop-blur-xl rounded-3xl overflow-hidden shadow-lg hover:shadow-[0_15px_40px_rgba(0,180,216,0.2)] transition-all duration-500 hover:scale-[1.05] hover:-translate-y-2 h-full flex flex-col">
