---
import ScrollVelocity from "../reactbits/ScrollVelocity";
import AnimatedContent from "../reactbits/AnimatedContent";
---

<section class="relative bg-gradient-to-br from-white via-gray-50 to-white py-20 lg:py-32 overflow-hidden" id="service">
  <!-- Decorative Background Elements -->
  <div class="absolute inset-0 pointer-events-none overflow-hidden">
    <!-- Gradient Orbs -->
    <div class="absolute top-20 right-10 w-96 h-96 bg-gradient-to-br from-[#00B4D8]/10 to-transparent rounded-full blur-3xl"></div>
    <div class="absolute bottom-40 left-10 w-80 h-80 bg-gradient-to-br from-[#0077B6]/10 to-transparent rounded-full blur-3xl"></div>
    
    <!-- Floating Shapes -->
    <div class="absolute top-40 left-20 w-16 h-16 border-2 border-[#00B4D8]/20 rounded-lg rotate-12 animate-float"></div>
    <div class="absolute bottom-60 right-32 w-20 h-20 border-2 border-[#0077B6]/20 rounded-full animate-float-delay"></div>
  </div>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <AnimatedContent
        distance={50}
        direction="vertical"
        reverse={false}
        duration={1.5}
        ease="power2.out"
        initialOpacity={0}
        animateOpacity
        delay={0}
        client:visible
      >
        <div class="inline-flex items-center gap-2 bg-white/60 backdrop-blur-md border border-[#00B4D8]/30 rounded-full px-6 py-2 mb-6 shadow-lg">
          <span class="w-2 h-2 bg-[#00B4D8] rounded-full animate-pulse"></span>
          <span class="text-[#0D3B66] text-sm font-semibold">Our Services</span>
        </div>
      </AnimatedContent>

      <AnimatedContent
        distance={50}
        direction="vertical"
        reverse={false}
        duration={1.5}
        ease="power2.out"
        initialOpacity={0}
        animateOpacity
        delay={0.1}
        client:visible
      >
        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-black text-gray-900 mb-6 [text-shadow:_0_2px_20px_rgb(0_180_216_/_20%)]">
          Discover Our Comprehensive Services
